generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String   @id @default(cuid())
  name      String?
  phone     String   @unique
  password  String
  role      Role     @default(AGENT_TEST)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLoginAt    DateTime?
  lastLogoutAt   DateTime?

}

enum Role {
  ADMIN
  AGENT
  SUPERVISOR
  AGENT_TEST
}

model Status {
  id            String   @id @default(cuid())
  name          String   @unique
  recallAfterH  Int?    
  createdAt     DateTime @default(now())

   orders       Order[]
}

model Order {
  id            String   @id @default(cuid())
  orderNumber   Int      @unique
  customerName  String?
  customerPhone String?
  productNote   String?
  orderDate     DateTime
  totalPrice    Float
  statusId      String?
  status        Status?  @relation(fields: [statusId], references: [id])
  recallAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

