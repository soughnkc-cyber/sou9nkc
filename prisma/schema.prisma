generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String   @id @default(cuid())
  name      String?
  phone     String   @unique
  password  String
  encryptedPassword String? // Pour affichage dans le formulaire (chiffr√©)
  role      Role     @default(AGENT_TEST)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLoginAt    DateTime?
  lastLogoutAt   DateTime?
  lastSeenAt     DateTime? @default(now())
  status        UserStatus @default(ACTIVE)
  
  iconColor     String     @default("#2563eb")
  roleColor     String     @default("#f3f4f6")
  paymentRemainingDays Int  @default(0)
  paymentDefaultDays   Int  @default(0)
  paymentStartDate     DateTime @default(now())

  // Permissions granulaires
  canViewOrders     Boolean @default(false)
  canEditOrders     Boolean @default(false)
  canViewUsers      Boolean @default(false)
  canEditUsers      Boolean @default(false)
  canViewProducts   Boolean @default(false)
  canEditProducts   Boolean @default(false)
  canViewStatuses   Boolean @default(false)
  canEditStatuses   Boolean @default(false)
  canViewReporting  Boolean @default(false)
  canViewDashboard  Boolean @default(false)

  orders       Order[]

}


enum UserStatus {
  ACTIVE
  INACTIVE
}

enum Role {
  ADMIN
  AGENT
  SUPERVISOR
  AGENT_TEST
}

model Status {
  id            String   @id @default(cuid())
  name          String   @unique
  etat          Etat     @default(STATUS_01)
  isActive      Boolean  @default(true)
  recallAfterH  Int?    
  color         String   @default("#6366f1") // Indigo default
  isArchived    Boolean  @default(false)
  createdAt     DateTime @default(now())

  orders       Order[]
}

enum Etat {
  STATUS_01
  STATUS_02
  STATUS_03
  STATUS_04
  STATUS_05
  STATUS_06
  STATUS_07
  STATUS_08
  STATUS_09
  STATUS_10
  STATUS_11
  STATUS_12
  STATUS_13
  STATUS_14
  STATUS_15
}

model Order {
  id            String   @id @default(cuid())
  orderNumber   Int     @unique
  customerName  String?
  customerPhone String?
  productNote   String?
  orderDate     DateTime
  totalPrice    Float
  statusId      String?
  status        Status?  @relation(fields: [statusId], references: [id])
  agentId       String?
  agent         User?    @relation(fields: [agentId], references: [id])
  recallAt      DateTime?
  assignedAt    DateTime?
  firstProcessedAt DateTime?
  processingTimeMin Int?
  absoluteDelayMin  Int?
  recallAttempts Int @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  products      Product[] 
}


model Product {
  id          String   @id @default(cuid())
  shopifyId   String   @unique
  title       String
  status      String
  vendor      String?
  productType String?
  price       Float
  assignedAgentIds   String[]  @default([]) // agents qui peuvent voir ce produit
  hiddenForAgentIds  String[]  @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orders             Order[]
}

model SystemSettings {
  id                    String   @id @default("default")
  assignmentBatchSize   Int      @default(1)
  maxRecallAttempts     Int      @default(3)
  
  // Horaires de travail
  workStart             String   @default("10:00")
  workEnd               String   @default("22:00")
  workDays              Int[]    @default([1, 2, 3, 4, 5, 6, 0]) // 0=Dimanche, 1=Lundi...
  
  // Pauses
  breakStart            String?  @default("13:30")
  breakEnd              String?  @default("14:30")

  updatedAt             DateTime @updatedAt
}
