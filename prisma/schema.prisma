generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String   @id @default(cuid())
  name      String?
  phone     String   @unique
  password  String
  role      Role     @default(AGENT_TEST)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLoginAt    DateTime?
  lastLogoutAt   DateTime?
  lastSeenAt     DateTime? @default(now())
  status        UserStatus @default(ACTIVE)
  
  iconColor     String     @default("#2563eb")
  roleColor     String     @default("#f3f4f6")
  paymentRemainingDays Int  @default(0)
  paymentDefaultDays   Int  @default(0)

  // Permissions granulaires
  canViewOrders     Boolean @default(false)
  canEditOrders     Boolean @default(false)
  canViewUsers      Boolean @default(false)
  canEditUsers      Boolean @default(false)
  canViewProducts   Boolean @default(false)
  canEditProducts   Boolean @default(false)
  canViewStatuses   Boolean @default(false)
  canEditStatuses   Boolean @default(false)
  canViewReporting  Boolean @default(false)
  canViewDashboard  Boolean @default(false)

  orders       Order[]

}


enum UserStatus {
  ACTIVE
  INACTIVE
}

enum Role {
  ADMIN
  AGENT
  SUPERVISOR
  AGENT_TEST
}

model Status {
  id            String   @id @default(cuid())
  name          String   @unique
  recallAfterH  Int?    
  createdAt     DateTime @default(now())

  orders       Order[]
}

model Order {
  id            String   @id @default(cuid())
  orderNumber   Int     @unique
  customerName  String?
  customerPhone String?
  productNote   String?
  orderDate     DateTime
  totalPrice    Float
  statusId      String?
  status        Status?  @relation(fields: [statusId], references: [id])
  agentId       String?
  agent         User?    @relation(fields: [agentId], references: [id])
  recallAt      DateTime?
  firstProcessedAt DateTime?
  processingTimeMin Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  products      Product[] 
}


model Product {
  id          String   @id @default(cuid())
  shopifyId   String   @unique
  title       String
  status      String
  vendor      String?
  productType String?
  price       Float
  assignedAgentIds   String[]  @default([]) // agents qui peuvent voir ce produit
  hiddenForAgentIds  String[]  @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orders             Order[]
}


